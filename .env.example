# Kitji Studios Website - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# React Frontend Configuration
# =============================================================================

# API Base URL for development (ASP.NET Core backend)
VITE_API_BASE_URL=http://localhost:5001

# Alternative: Node.js backend (legacy)
# VITE_API_BASE_URL=http://localhost:5000


# =============================================================================
# Email Service Configuration
# =============================================================================

# SendGrid API Key (primary email service)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Resend API Key (alternative email service)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Email Configuration
EMAIL_FROM_ADDRESS=noreply@kitjistudios.com
EMAIL_FROM_NAME=Kitji Studios Website
EMAIL_TO_ADDRESS=sales@kitjistudios.com


# =============================================================================
# Database Configuration (ASP.NET Core)  
# =============================================================================

# Connection string for SQL Server (production)
# Example: Server=localhost;Database=KitjiStudiosDb;Trusted_Connection=true;
DATABASE_CONNECTION_STRING=your_database_connection_string_here

# Database provider: InMemory, SqlServer, PostgreSQL
DATABASE_PROVIDER=InMemory


# =============================================================================
# Development Configuration
# =============================================================================

# Environment
NODE_ENV=development
ASPNETCORE_ENVIRONMENT=Development

# Logging level
LOG_LEVEL=Information

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000


# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret (for future admin authentication)
JWT_SECRET=your_jwt_secret_here

# CORS allowed origins for production
PRODUCTION_ORIGINS=https://yourdomain.com,https://www.yourdomain.com


# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================

# Google Analytics ID
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Application Insights Connection String (Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=your_app_insights_connection_here

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here


# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Contact form rate limit (requests per hour)
CONTACT_FORM_RATE_LIMIT=5

# API rate limit (requests per minute)
API_RATE_LIMIT=100


# =============================================================================
# Cache Configuration
# =============================================================================

# Redis connection string (for distributed caching)
REDIS_CONNECTION_STRING=your_redis_connection_here

# Cache expiration times (in minutes)
CACHE_EXPIRATION_MINUTES=60


# =============================================================================
# Development Tools
# =============================================================================

# Enable Swagger in development
ENABLE_SWAGGER=true

# Enable detailed error pages
ENABLE_DETAILED_ERRORS=true

# Database logging
ENABLE_DATABASE_LOGGING=false