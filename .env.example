# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Email Service (Required)
# Get your API key from https://resend.com/
RESEND_API_KEY=your_resend_api_key_here

# Database (Optional - uses in-memory storage by default)
# PostgreSQL connection string for production use
DATABASE_URL=postgresql://username:password@localhost:5432/kitji_db

# Application Environment
NODE_ENV=development

# Server Configuration (Optional - defaults provided)
PORT=5000
HOST=0.0.0.0

# Email Configuration (Optional - defaults provided)
FROM_EMAIL=noreply@kitjistudios.com
TO_EMAIL=contact@kitjistudios.com

# Session Secret (Optional - auto-generated in development)
SESSION_SECRET=your_secure_session_secret_here