@inherits LayoutView
@using KitjiStudios.Client.Components

<div class="min-h-screen bg-background smooth-scroll">
    <!-- Dark themed background that extends through entire page -->
    <div class="fixed inset-0 dark-theme-bg -z-10">
        <!-- Geometric Grid Pattern -->
        <div class="absolute inset-0 opacity-20">
            <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                <defs>
                    <pattern id="main-grid" width="10" height="10" patternUnits="userSpaceOnUse">
                        <path d="M 10 0 L 0 0 0 10" fill="none" stroke="hsl(207, 90%, 54%)" stroke-width="0.5"/>
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#main-grid)" />
            </svg>
        </div>
    </div>
    
    <Navigation />
    
    <main class="relative z-10">
        @Body
    </main>
    
    <Footer />
</div>

<style>
    .min-h-screen { min-height: 100vh; }
    .bg-background { background-color: hsl(var(--background)); }
    .smooth-scroll { scroll-behavior: smooth; }
    .fixed { position: fixed; }
    .inset-0 { top: 0; right: 0; bottom: 0; left: 0; }
    .-z-10 { z-index: -10; }
    .absolute { position: absolute; }
    .opacity-20 { opacity: 0.2; }
    .w-full { width: 100%; }
    .h-full { height: 100%; }
    .relative { position: relative; }
    .z-10 { z-index: 10; }
</style>