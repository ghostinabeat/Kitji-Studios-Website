@page "/about"
@using KitjiStudios.Client.Services
@inject INavigationService NavigationService

<PageTitle>About Us - Kitji Studios</PageTitle>

<div class="min-h-screen bg-background smooth-scroll">
    <div class="pt-24 pb-20">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Header Section -->
            <div class="text-center mb-16 fade-on-scroll">
                <div class="badge mb-4 bg-primary/10 text-primary border border-primary/20">
                    About Kitji Studios
                </div>
                <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
                    Enterprise Software Excellence Since 2018
                </h1>
                <p class="text-xl text-gray-300 max-w-3xl mx-auto">Key features of our company and the spirit behind our name</p>
            </div>

            <!-- Services Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16 fade-on-scroll">
                @foreach (var service in services)
                {
                    <div class="service-card" @onclick="() => NavigateToServices()">
                        <div class="service-icon">
                            @if (service.Icon == "laptop")
                            {
                                <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            }
                            else if (service.Icon == "trending")
                            {
                                <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                            }
                            else if (service.Icon == "settings")
                            {
                                <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            }
                            else if (service.Icon == "cog")
                            {
                                <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4" />
                                </svg>
                            }
                        </div>
                        <h3 class="service-title">@service.Title</h3>
                        <p class="service-description">@service.Description</p>
                        <div class="service-arrow">
                            <span class="learn-more">Learn More â†’</span>
                        </div>
                    </div>
                }
            </div>

            <!-- Company Story -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16 fade-on-scroll">
                <div>
                    <h2 class="text-3xl font-bold text-white mb-6">Our Story</h2>
                    <div class="space-y-4 text-gray-300">
                        <p>
                            Founded in 2018, Kitji Studios emerged from a vision to bridge the gap between 
                            cutting-edge technology and enterprise needs. Our name "Kitji" represents our 
                            commitment to building interconnected solutions - like a web that connects every 
                            part of your business ecosystem.
                        </p>
                        <p>
                            We've grown from a small team of passionate developers to a trusted partner for 
                            banking institutions, insurance companies, and government agencies. Our flagship 
                            products, Utell and Pelas, now serve thousands of users in mission-critical environments.
                        </p>
                        <p>
                            Today, we continue to push the boundaries of what's possible in enterprise software, 
                            always with our core values of security, reliability, and innovation at the forefront.
                        </p>
                    </div>
                </div>
                
                <div class="stats-grid">
                    <div class="stat-item">
                        <h3 class="stat-number">50+</h3>
                        <p class="stat-label">Enterprise Clients</p>
                    </div>
                    <div class="stat-item">
                        <h3 class="stat-number">1000+</h3>
                        <p class="stat-label">Active Users</p>
                    </div>
                    <div class="stat-item">
                        <h3 class="stat-number">99.9%</h3>
                        <p class="stat-label">Uptime SLA</p>
                    </div>
                    <div class="stat-item">
                        <h3 class="stat-number">24/7</h3>
                        <p class="stat-label">Support</p>
                    </div>
                </div>
            </div>

            <!-- Values Section -->
            <div class="text-center mb-16 fade-on-scroll">
                <h2 class="text-3xl font-bold text-white mb-12">Our Core Values</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div class="value-card">
                        <div class="value-icon">
                            <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                        </div>
                        <h3 class="value-title">Security First</h3>
                        <p class="value-description">
                            Every line of code is written with enterprise-grade security in mind, 
                            ensuring your data and systems remain protected.
                        </p>
                    </div>
                    
                    <div class="value-card">
                        <div class="value-icon">
                            <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                        </div>
                        <h3 class="value-title">Performance</h3>
                        <p class="value-description">
                            Optimized solutions that scale with your business, delivering 
                            exceptional performance under any load.
                        </p>
                    </div>
                    
                    <div class="value-card">
                        <div class="value-icon">
                            <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                        </div>
                        <h3 class="value-title">Partnership</h3>
                        <p class="value-description">
                            We work as an extension of your team, understanding your business 
                            and delivering solutions that drive real results.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private readonly List<Service> services = new()
    {
        new Service
        {
            Icon = "laptop",
            Title = "Software Development",
            Description = "Our team is dedicated to engineering the best custom software solutions for your modern business needs."
        },
        new Service
        {
            Icon = "trending",
            Title = "Business Analysis",
            Description = "We are passionate about improving your business processes. Our team will deliver an effective and efficient solution."
        },
        new Service
        {
            Icon = "settings",
            Title = "Reverse Engineering",
            Description = "See something you like? Our team will engineer from the ground up and deliver a unique product tailored to you."
        },
        new Service
        {
            Icon = "cog",
            Title = "Custom Software",
            Description = "Bespoke software solutions engineered specifically for your organization's unique requirements and workflows."
        }
    };

    private void NavigateToServices()
    {
        NavigationService.NavigateTo("/services");
    }

    private class Service
    {
        public string Icon { get; set; } = "";
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
    }
}

